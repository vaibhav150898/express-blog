<section class="featured-blog mtb-40">
  <div class="container">
    <div class="row">
      <% d.forEach((item)=>{ %>

      <div class="col-md-4">
        <div class="blog-box">
          <img
            src="<%= item.image.url %>"
            height="250px"
            width="250px"
            alt="blog1"
          />

          <h3><%= item.title %></h3>
          <p><%= item.createdAt.toLocaleDateString() %></p>
          <p><%= item.description.slice(0,90) %></p>
          <a href="/blogdetail/<%= item._id %>" class="btn btn-danger"
            >Read more...</a
          >
        </div>
      </div>
      <% }) %>
    </div>
  </div>
</section>

